<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kevin.mmcclient.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/touchpad"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="TOUCH PAD"
        android:longClickable="false"
        android:textColor="#bfbfbf"
        android:textSize="30dp"
        android:enabled="true"
        android:clickable="false"
        android:layout_below="@+id/leftmouse"
        android:layout_alignParentBottom="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/leftmouse"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/midmouse"
        android:layout_toStartOf="@+id/midmouse"
        android:text="L"
        android:textColor="#bfbfbf"
        android:textSize="30dp"
        android:visibility="visible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/midmouse"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="M"
        android:textColor="#bfbfbf"
        android:textSize="30dp"
        android:visibility="visible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/rightmouse"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/midmouse"
        android:layout_alignRight="@+id/touchpad"
        android:layout_alignEnd="@+id/touchpad"
        android:text="R"
        android:textColor="#bfbfbf"
        android:textSize="30dp"
        android:visibility="visible" />

</RelativeLayout>
